<h1>Listing animals</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Animal type</th>
    <th>Nickname</th>
    <th>Gender</th>
    <th>Date incoming</th>
    <th>Id user</th>
    <th>Id breed</th>
    <th>Label</th>
    <th>Signs</th>
    <th>Id hair type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @animals.each do |animal| %>
  <tr>
    <td><%= animal.id %></td>
    <td><%= animal.animal_type %></td>
    <td><%= animal.nickname %></td>
    <td><%= animal.gender %></td>
    <td><%= animal.date_incoming %></td>
    <td><%= animal.id_user %></td>
    <td><%= animal.id_breed %></td>
    <td><%= animal.label %></td>
    <td><%= animal.signs %></td>
    <td><%= animal.id_hair_type %></td>
    <td><%= link_to 'Show', animal %></td>
    <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
    <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

